    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Django Run Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "--noreload"
            ],
            "django": true,
            "env": {
                "DJANGO_ENV": "Debug"
            }
        },
        {
            "name": "Python: Django Run Server (0:8000)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "0:8000",
                "--noreload"
            ],
            "django": true,
            "env": {
                "DJANGO_ENV": "Debug"
            }
        },
        {
            "name": "Python: Django Run Server (with reload)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "env": {
                "DJANGO_ENV": "Debug"
            }
        },
        {
            "name": "Python: Django Shell",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "shell"
            ],
            "django": true,
            "env": {
                "DJANGO_ENV": "Debug"
            },
        }
    ]
}